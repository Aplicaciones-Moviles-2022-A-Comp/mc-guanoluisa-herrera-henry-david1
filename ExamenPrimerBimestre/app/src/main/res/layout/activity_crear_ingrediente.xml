<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".CrearIngrediente">

    <EditText
        android:id="@+id/txtIngrediente3"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:hint="Ingrediente 3"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIngrediente2" />

    <EditText
        android:id="@+id/txtIngrediente2"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:hint="Ingrediente 2"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIngrediente1" />

    <EditText
        android:id="@+id/txtIngrediente4"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:hint="Ingrediente 4"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIngrediente3" />

    <EditText
        android:id="@+id/txtIngrediente1"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="120dp"
        android:hint="Ingrediente 1"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCrearIngrdtes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="216dp"
        android:backgroundTint="#FF403C36"
        android:text="Crear ingredientes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTituloPlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar ingredientes"
        app:layout_constraintBottom_toTopOf="@+id/txtIngrediente1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752" />

    <EditText
        android:id="@+id/txtIngrediente5"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Ingrediente 5"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIngrediente4" />

</androidx.constraintlayout.widget.ConstraintLayout>